<section class="colored-wrapper">
  <section class="grid-wrapper">
    <article class="header">
      <h1>O que falta no Porto?</h1>
      <%= render 'form' %>
      <p id="notice"><%= notice %></p>
    </article>
    
  </section>
  
</section>

<section class="grid-wrapper">
  <table>
  <% @ideas.each do |idea| %>
    <tr>
      <td style="position: relative;">
        <%#= link_to idea do %>
          <h2><%= idea.description %></h2>
        <%# end %>
        <p><small>idea sugerida a <%= idea.created_at.strftime("%d/%m/%Y") %></small></p>
        <div class="right-zone">
          <p style="text-align: right; margin: 0;line-height: 80px; font-size: 22px;">
            <a href="#" class="idea-thumbs-down" data-idea="<%= idea.id %>"><span class="vote-link">-</span></a>
             <strong data-plusminus-id="<%= idea.id %>"><%= idea.plusminus %></strong>
             <a href="#" class="idea-thumbs-up" data-idea="<%= idea.id %>"><span class="vote-link">+</span></a>
           </p>
        </div>
      </td>

      <!-- <td><%#= link_to 'Show', idea %></td>
      <td>
      <td><%#= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
    </tr>
  <% end %>
  </table>
</section>

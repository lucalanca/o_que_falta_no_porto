<header class="image-wrapper image1">
  <section class="grid-wrapper">
    <article class="header">
      <%= image_tag "ImprovePortugalLogoLarge2.png" %>
      <%= render 'form' %>

      <p id="notice" class="white"><%= notice %></p>
    </article> 
  </section>
  
</header>

<section class="grid-wrapper">
  <h4>Vota e comenta nos problemas já sugeridos.</h4>
  <table>
  <% @problems.each_with_index do |problem,i| %>
    <tr>
      <td style="position: relative;" class="<%= 'first' if i == 0 %>">
        <%= link_to problem do %>
          <h5 class="text-no-margin"><%= problem.description %></h5>
        <% end %>
        <p><small>
          <fb:comments-count href=http://oquefaltaemportugal.herokuapp.com/problems/<%= @problem.id %>/></fb:comments-count> comentários
        </small></p>
        <div class="right-zone">
          <p style="text-align: right; margin: 0;line-height: 80px; font-size: 22px;">
            <a href="#" class="problem-thumbs-down" data-problem="<%= problem.id %>"><span class="vote-link">-</span></a>
             <strong data-plusminus-id="<%= problem.id %>"><%= problem.plusminus %></strong>
             <a href="#" class="problem-thumbs-up" data-problem="<%= problem.id %>"><span class="vote-link">+</span></a>
           </p>
        </div>
      </td>
    </tr>
  <% end %>
  </table>
</section>


